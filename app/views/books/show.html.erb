<h1>User info</h1>
<p><%= image_tag @user.get_profile_image(100,100) %></p>
<table>
 <tr><th>name</th>
 <th><%= @user.name %></th></tr>

  <tr><th>introduction</th>
  <th><%= @user.introduction %></th></tr>
</table>
<%= link_to edit_user_path(@user) do %>
<i class="fa-solid fa-user-gear"></i>
<% end %>

<h1>New book</h1>
<%= form_with model: @newbook do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit 'Create Book' %>
<% end %>

<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table">
<tbody>
  <tr>
  <td>
 <%= image_tag @book.user.get_profile_image(100,100) %>
 <br>
 <%= link_to user_path(@user.id) do %>
 <%= @book.user.name %>
 <% end %>
 </td>
  <td><%= link_to book_path(@book.id) do %>
    <%= @book.title %>
 <% end %>
 </td>
<td><%= @book.opinion %></td>
</tr>
</tbody>
</table>
</div>